{
  "name": "@catalystsquad/zest",
  "version": "0.1.0",
  "description": "Library of separated standard web-components and helper libs for everywhere to enjoy, even in frameworks",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc",
    "preview": "vite preview",
    "release": "semantic-release --dry-run -e semantic-release-monorepo",
    "build:packages": "lerna run build",
    "test:packages": "lerna run test",
    "release:packages": "lerna exec --concurrency 1 -- npx --no-install semantic-release --dry-run -e semantic-release-monorepo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/catalystsquad/zest.git"
  },
  "keywords": [
    "webcomponents",
    "typescript",
    "lerna",
    "vanilla",
    "minimalist"
  ],
  "author": "Catalyst Squad <opensource@catalystsquad.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/catalystsquad/zest/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://github.com/catalystsquad/zest#README.md",
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@vitejs/plugin-basic-ssl": "^1.0.1",
    "lerna": "^6.6.1",
    "semantic-release": "^21.0.1",
    "semantic-release-monorepo": "^7.0.5",
    "typescript": "^5.0.4",
    "vite": "^4.3.2"
  },
  "dependencies": {
    "@catalystsquad/event-broker": "^0.1.0"
  }
}
